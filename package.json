{
  "name": "namor",
  "version": "1.1.2",
  "description": "A domain-safe name generator",
  "author": "Jason Maurer",
  "license": "MIT",
  "homepage": "https://github.com/jsonmaur/namor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsonmaur/namor.git"
  },
  "keywords": [
    "name",
    "subdomain",
    "generator",
    "random",
    "url",
    "friendly",
    "manly"
  ],
  "files": [
    "assets/",
    "dist/",
    "index.d.ts",
    "data.json",
    "license",
    "readme.md"
  ],
  "engines": {
    "node": ">=6"
  },
  "main": "dist/index.js",
  "types": "index.d.ts",
  "scripts": {
    "test:lint": "standard --verbose | snazzy",
    "test:unit": "nyc mocha test -r @babel/register",
    "test:coverage": "nyc report -r=lcov",
    "test": "npm run build:data && npm-run-all test:*",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "build:data": "rm -f data.json && babel-node data/scripts/build",
    "build:node": "rm -rf dist && babel src -d dist",
    "build": "npm-run-all build:*",
    "watch": "npm run build:node -- -w -s",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.4",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.3.4",
    "@babel/register": "7.0.0",
    "chai": "4.2.0",
    "coveralls": "3.0.3",
    "glob": "7.1.3",
    "mocha": "6.0.2",
    "npm-run-all": "4.1.5",
    "nyc": "13.3.0",
    "snazzy": "8.0.0",
    "source-map-support": "0.5.11",
    "standard": "12.0.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nyc": {
    "require": [
      "@babel/register"
    ]
  }
}
